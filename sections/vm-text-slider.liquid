<!-- /sections/section-double-slider.liquid -->

{%- render 'vm-text-slider' -%}

{% schema %}
  {
    "name": "Text slider - Tiege",
    "settings": [
{
      "type": "select",
      "id": "text_width",
      "label": "Width",
      "default": "wrapper",
      "options": [
        {"value": "wrapper--full-padded", "label": "Full width padded"},
        {"value": "wrapper", "label": "Normal"},
        {"value": "wrapper--narrow", "label": "Narrow"}
      ]
    },
      
      {
        "type": "select",
        "id": "width",
        "label": "Width",
        "default": "wrapper--full",
        "options": [
          {
            "value": "wrapper--full",
            "label": "Full width"
          }, {
            "value": "wrapper--full-padded",
            "label": "Full width padded"
          }, {
            "value": "wrapper",
            "label": "Normal"
          }
        ]
      },
      {
        "type": "header",
        "content": "Text"
      }, {
        "type": "select",
        "id": "text_alignment",
        "label": "Alignment",
        "default": "text-left",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          }, {
            "value": "text-center",
            "label": "Centered"
          }
        ]
      }, {
        "type": "header",
        "content": "Colors"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background"
      }, {
        "type": "color",
        "id": "color",
        "label": "Text"
      }, {
        "type": "color",
        "id": "sub_color",
        "label": "Sub Heading"
      }, {
        "type": "header",
        "content": "Section padding"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 0
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 0
      }
    ],
    "blocks": [
      {
        "type": "text-slide",
        "name": "Text slide",
        "settings": [
                  {
          "type": "checkbox",
          "id": "stars_enabled",
          "label": "Enable Star Styling",
          "default": false
        },
          {
            "type": "text",
            "id": "subheading",
            "label": "Subheading",
            "default": "Tiege Subheading"
          },
          {
            "type": "range",
            "id": "subheading_size",
            "label": "Size",
          "min": 12,
          "max": 16,
          "step": 2,
          "default": 16
          },
          {
            "type": "range",
            "id": "sub_letter_spacing",
            "min": 0,
            "max": 20,
            "step": 5,
            "unit": "px",
            "label": "Letter spacing",
            "default": 0
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Image with text slider"
          }, {
            "type": "range",
            "id": "heading_size",
            "label": "Size",
          "min": 24,
          "max": 40,
          "step": 8,
          "default": 40
          }, {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
          }, {
            "type": "range",
            "id": "text_size",
            "label": "Size",
          "min": 12,
          "max": 16,
          "step": 2,
          "default": 16
          }, {
            "type": "select",
            "id": "text_style",
            "label": "Style",
            "default": "font-body",
            "options": [
              {
                "value": "font-heading",
                "label": "Heading"
              }, {
                "value": "font-body",
                "label": "Body"
              }
            ]
          }, {
            "type": "header",
            "content": "Button"
          }, {
            "type": "checkbox",
            "id": "reg_text",
            "label": "Show as Regular Text",
            "default": true
          }, {
            "type": "text",
            "id": "button_text",
            "label": "Text",
            "default": "Learn more"
          }, {
            "type": "range",
            "id": "btn_size",
            "label": "Size",
            "min": 1,
            "max": 15,
            "step": 1,
            "default": 4
          }, {
            "type": "url",
            "id": "button_url",
            "label": "Link"
          }, {
            "type": "select",
            "id": "button_type",
            "label": "Color",
            "default": "btn--primary",
            "options": [
              {
                "value": "btn--primary",
                "label": "Primary"
              }, {
                "value": "btn--secondary",
                "label": "Secondary"
              }, {
                "value": "btn--white",
                "label": "White"
              }, {
                "value": "btn--black",
                "label": "Black"
              }
            ]
          }, {
            "type": "select",
            "id": "button_size",
            "label": "Size",
            "default": "",
            "options": [
              {
                "label": "Small",
                "value": "btn--small"
              }, {
                "label": "Medium",
                "value": ""
              }, {
                "label": "Large",
                "value": "btn--large"
              }
            ]
          }, {
            "type": "select",
            "id": "button_style",
            "label": "Style",
            "default": "btn--solid",
            "options": [
              {
                "label": "Solid",
                "value": "btn--solid"
              }, {
                "label": "Outline",
                "value": "btn--outline"
              }, {
                "label": "Text",
                "value": "btn--text"
              }
            ]
          }, {
            "type": "checkbox",
            "id": "show_arrow",
            "label": "Show arrow",
            "default": false
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Text slider - Tiege",

        "blocks": [
          {
            "type": "text-slide"
          }, {
            "type": "text-slide"
          }, {
            "type": "text-slide"
          }
        ]
      }
    ],
    "disabled_on": {
      "groups": ["header", "aside", "footer"]
    }
  }
{% endschema %}