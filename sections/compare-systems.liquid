          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "properties",
            "label": "Properties",
            "default": "Yes,Yes,Yes,No,No",
            "info": "Info for text item"
          }
        ]
      }
    ]
