<style>
.comparision-system {
    display: flex;
    justify-content: center;
    align-items: center;
}
.comparision-wrapper {
    display: flex;
    width: 100%;
    max-width: 100vw;
    padding: 0 var(--inner);
}
.comparision-text {
    width: calc(25% - 4rem);
    padding: 0 2rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.comparision-text .caption-text {
    margin-bottom: 0;
    text-transform: uppercase;
}
.comparision-text .heading-text {
    margin-top: 0;
}
.comparision-details-text {
    margin-bottom: 2rem;
}
#cd-table {
    position: relative;
    width: 100%;
    max-width: 1440px;
    margin: auto;
    font-size: 0.875rem;
}
#cd-table::after {
    content: "";
    display: table;
    clear: both;
}
#cd-table .cd-table-container {
    position: relative;
    width: calc(100% - calc(100%/{{ section.blocks.size | plus: 1 }}));
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
}
{% if scrollable %}
#cd-table .cd-table-wrapper {
    width: 870px;
    padding-left: 120px;
}
#cd-table header.cd-table-column {
    position: absolute;
    width: 120px;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 10;
    margin-left: 0;
    pointer-events: none;
}
#cd-table .cd-table-column {
    width: 250px;
    float: left;
    margin-left: -1px;
}
{% else %}
#cd-table .cd-table-wrapper {
    width: 100%;
}
#cd-table header.cd-table-column {
    position: relative;
    width: calc(100%/{{ section.blocks.size | plus: 1 }});
    height: 100%;
    pointer-events: none;
}
#cd-table .cd-table-column {
    width: calc(100%/{{ section.blocks.size | plus: 1 }});
    float: left;
    margin-left: -1px;
}
{% endif %}
#cd-table .cd-table-column ul {
    margin: 0;
}
#cd-table h3,
#cd-table ul>li {
    position: relative;
    text-align: center;
    padding: 0 1em;
    height: 56px;
    line-height: 56px;
    margin: 0;
}
#cd-table ul>li {
    list-style: none;
}
.cd-table-wrapper .cd-table-column:nth-child(odd),
#cd-table .cd-table-column li:nth-child(odd) {
    background: rgba(0, 0, 0, 0.025);
}
#cd-table header.cd-table-column li {
    text-align: left;
    background: white;
}
#cd-table header.cd-table-column li:nth-child(odd) {
    background: #f9f9f9;
}
#cd-table .cd-table-column li {
    display: flex;
    justify-content: center;
    align-items: center;
}
header.cd-table-column .header-row svg {
    opacity: 0;
    visibility: hidden;
}
.cd-table-column .header-row {
    min-height: 10rem;
    display: flex;
    flex-direction: column;
}
.cd-table-column .header-row img,
.cd-table-column .header-row svg {
    max-height: 8rem;
    margin: 0 auto;
    width: auto;
}
span.green-dot {
    height: 1rem;
    width: 1rem;
    display: block;
    border-radius: 50rem;
    background: var(--BTN-SECONDARY-BG-COLOR);
}
/* Section specific CSS */
section.comparision-system .comparision-wrapper {
    flex-direction: column;
    gap: 3rem;
}
section.comparision-system .caption-text {
    display: none;
}
section.comparision-system .comparision-heading {
    text-align: center
}
section.comparision-system .comparision-table {
    width: 100%;
}
section.comparision-system .comparision-details {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}
/* Modal Specific CSS */
.product-modal .comparision-wrapper {
    flex-direction: column;
    padding: 0;
}
.product-modal .comparision-text {
    width: 100%;
    padding: 0;
    margin-bottom: 2rem;
}
.product-modal .comparision-table {
    width: 100%;
}
@media only screen and (min-width: 870px) {
    #cd-table::before {
        display: none;
    }
    #cd-table .cd-table-wrapper {
        width: 100%;
        {% if scrollable %}
        padding-left: calc(100%/{{ section.blocks.size }});
        {% endif %}
    }
    #cd-table .cd-table-column {
        width: calc(100%/{{ section.blocks.size | plus: 1 }});
        float: left;
    }
    #cd-table header.cd-table-column {
        position: relative;
        width: calc(100%/{{ section.blocks.size | plus: 1 }});
        float: left;
        box-shadow: none;
        pointer-events: auto;
    }
    /* Section specific CSS */
    section.comparision-system #cd-table {
        width: 100%;
    }
    section.comparision-system .comparision-details {
        flex-direction: row;
    }
    section.comparision-system .comparision-details-text {
        max-width: 50%;
    }
    /* Modal specific CSS */
    .product-modal .comparision-text {
        width: 30%;
    }
    .product-modal .comparision-table {
        width: 70%;
    }
    .product-modal .comparision-wrapper {
        flex-direction: row;
        padding: 0 var(--inner);
    }
}
</style>

<section 
  id="ComparisionSection--{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="comparision"
  class="comparision-system index-comparision section-padding {{ section.settings.text_alignment }} {{ desktop_height }} {{ mobile_height }}"
  style="{{ style }}"
  >
  {{ section_content }}
</section>
{% comment %}
<product-modal class="product__block block-padding" style=" --block-padding-bottom: 30px;">
  <div class="product__icon__container product__icon__container--full">
    <a class="radio__legend__link text-link" data-popup-open {{ section.shopify_attributes }}>
      Compare our Systems
    </a>
  </div>

  <dialog class="product-modal" aria-hidden="true" inert data-scroll-lock-required>
    <form method="dialog">
      <button class="visually-hidden no-js" aria-label="{{ 'general.accessibility.close' | t }}"></button>
    </form>

    <div style='max-width: 1440px; --inner: 30px;' class="product-modal__outer prod-modal__container">
      <div class="product-modal__content small product-modal__container" data-scroll-lock-scrollable>
        <button type="button" class="product-modal__close" data-popup-close autofocus aria-label="{{ 'general.accessibility.close' | t }}">
          {%- render 'icon-cancel' -%}
        </button>
        {{ popup_content }}
      </div>
    </div>
  </dialog>
</product-modal>
{% endcomment %}
