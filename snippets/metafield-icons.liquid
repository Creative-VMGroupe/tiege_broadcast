<div class="metafield-icons_container">
{% if product.metafields.custom.icon_benefits_1 == true and
    product.metafields.custom.icon_benefit_2 == true and
    product.metafields.custom.icon_benefit_3 == true %}
    

<div class="metafield-icon_container">
    <img src="{{ product.metafields.custom.icon_benefits_1 | file_url }}" alt="Just text" height="25px" width="25px">

    <p class="metafield-icons_text">{{ product.metafields.custom.icon_benefit_1_description }}</p>
</div>
<div class="metafield-icon_container">
    <img src="{{ product.metafields.custom.icon_benefit_2 | file_url }}" alt="Just text" height="25px" width="25px">

    <p class="metafield-icons_text">{{ product.metafields.custom.icon_benefit_2_description }}</p>
</div>
   <div class="metafield-icon_container">
       <img src="{{ product.metafields.custom.icon_benefit_3 | file_url }}" alt="Just text" height="25px" width="25px">

       <p class="metafield-icons_text">{{ product.metafields.custom.icon_benefit_3_description }}</p>
</div>
{% endif %}
</div>